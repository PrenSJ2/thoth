{
  "manifest_version": 3,
  "name": "Thoth",
  "version": "1.0.5",
  "description": "The AI scribe that records what matters. Highlight text or images, use AI to summarize, and create GitHub issues automatically.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.github.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
